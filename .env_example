# Example configuration for BOLTCipher
# Copy this file to .env and adjust the values as needed

# Log level for the application (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Path to the Core Lightning RPC socket
LIGHTNING_RPC_FILE=/home/bitcoin/.lightning/bitcoin/lightning-rpc

# Text displayed as the page title
PAGE_TITLE=BOLTCipher

# Additional information shown on the index page
PAGE_INFO=BOLTCipher is a simple web application that allows you to create and pay for content using the Lightning Network.

# Price of the content in satoshis
CONTENT_PRICE=18

# Prefix for generated invoice labels
INVOICE_LABEL_PREFIX=f418

# Description used when creating invoices
INVOICE_DESCRIPTION=f418 test invoice

# Network settings for the FastAPI server
APP_HOST=0.0.0.0
APP_PORT=8000

# Enable if running behind a reverse proxy
PROXY_HEADERS=True
# Comma separated list of trusted proxy IPs ('*' to trust any)
FORWARDED_ALLOW_IPS='*'
